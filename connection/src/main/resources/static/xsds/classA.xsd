<?xml version="1.0" encoding="gb2312" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="Classes">
        <xs:complexType >
            <xs:sequence>
                <xs:element name="class" maxOccurs="50">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="课程编号">

                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:maxLength value="9"/>
                                    </xs:restriction>
                                </xs:simpleType>

                            </xs:element>
                            <xs:element name="课程名称">

                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:maxLength value="40"/>
                                    </xs:restriction>
                                </xs:simpleType>

                            </xs:element>
                            <xs:element name="学分">

                                <xs:simpleType>
                                    <xs:restriction base="xs:unsignedByte">
                                        <xs:maxInclusive value="5"/>
                                    </xs:restriction>
                                </xs:simpleType>

                            </xs:element>
                            <xs:element name="授课老师">

                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:maxLength value="20"/>
                                    </xs:restriction>
                                </xs:simpleType>

                            </xs:element>
                            <xs:element name="授课地点">

                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:maxLength value="40"/>
                                    </xs:restriction>
                                </xs:simpleType>

                            </xs:element>

                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
